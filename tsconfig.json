{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": false,
    "sourceMap": false,
    "declaration": true,
    "declarationDir": "types",
    "baseUrl": "./",
    "paths": {
      "@/*": ["lib/*"]
    }
  },
  "exclude": ["node_modules", "types"]
}
